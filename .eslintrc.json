{
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "plugins": [
        "react",
        "react-hooks",
        "prettier"
    ],
    "rules": {
      "prettier/prettier": 2,
      "no-unused-vars": 2,
      "no-param-reassign": 2,
      "dot-notation": 2,
      "eqeqeq": 2,
      "no-implied-eval": 2,
      "no-invalid-this": 2,
      "no-var": 2,
      "no-use-before-define": 2,
      "no-const-assign": 2,
      "spaced-comment": 2,
      "no-useless-constructor": 2,
      "prefer-const": 2,
      "max-depth": 2,
      "react/no-string-refs": 2,
      "react/jsx-key": 2,
      "react/jsx-pascal-case": 2,
      "react/jsx-no-undef": 2,
      "react/sort-comp": 2,
      "react/require-render-return": 2,
      "react/prefer-stateless-function": 2,
      "react/prefer-es6-class": 2,
      "react/no-direct-mutation-state": 2,
      "react-hooks/rules-of-hooks": 2,
      "react-hooks/exhaustive-deps": 1
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}